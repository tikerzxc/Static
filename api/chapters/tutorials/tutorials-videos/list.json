{% for chapter in site.categories['tutorials-videos'] %}

  {
  "shortDesc": {{ chapter.content | jsonify }},
  "type": {{ chapter.type | jsonify }},
  "items": [
      {% for subcategory in site.categories['tutorials-video-items-desc'] %}
          {
          "shortDesc": {{subcategory.content | jsonify}},
          "linkItems": [
              {% for link in site.categories['tutorials-video-links'] %}
                {
                  "text": {{link.text | jsonify}},
                  "src": "/assets/videos/{{subcategory.id }}/{{forloop.index}}/{{link.src}}",
                  "id": "{{subcategory.id }}-{{forloop.index}}"
                } {% unless forloop.last %},{% endunless %}
              {% endfor %}
          ]
          } {% unless forloop.last %},{% endunless %}
      {% endfor %}

  ]
  } {% unless forloop.last %},{% endunless %}

{% endfor %}
